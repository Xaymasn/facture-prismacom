<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
        <!-- Héritage du template des assets de rapports -->
        <!--template id="report_assets_common" name="reports_templates_personnalises assets" inherit_id="report.layout">
                <link rel="stylesheet" href="/reports_templates_personnalises/static/src/css/saleorder_style.css"/-->
        <template id="report_assets_common" name="reports_templates_personnalises assets" inherit_id="web.report_assets_common">
            <xpath expr="//style" position="after">
                <style>
                    /** Polices personnalisée */
@font-face {
    font-family: CenturyGothic;
    src: url(CenturyGothicRegulat.ttf);
}

*{
    font-family: CenturyGothic, Arial, Helvetica, sans-serif !important;
}

.rtp-header-slogan{
    color: #5a2069 !important;
}
div.page address.mb0{
    background: #5a2069;
    color:#fff;
    font: 14px bold CenturyGothic;
    padding: 1.5em 1em;
    width: 75%;
    float: right;
}
address.mb0 span[itemprop='name']{
    font-weight: bold;
    font-size: 16px;
}

.page h2{
    font-weight: bold;
    font-size: 16px!important;
    color:#5a2069 !important;
}

.table.table-condensed{
    border: 1px solid #5a2069!important;
}    
.table.table-condensed thead {
    background: #5a2069;
    color: white;
}    

div.footer{
    /*padding-top:1em;
    padding-bottom: 1em;
    border-left: 2px solid #5a2069;*/
    color: #5a2069!important;
}
div.footer div.text-left ul.list-unstyled{
    margin:0;padding:0;
}
div.footer div.text-center ul.list-inline li{
    display:block;
    padding-left: 5px;
    font: 12px bold CenturyGothic;
}
                </style>
            </xpath>
        </template>

        <!-- Héritage du template de layout standard (web.external_layout_standard) des rapports de facturation/vente  -->
        <template id="rtp_external_layout_inherit" inherit_id="web.external_layout_standard">
            <!-- Personnalisation du header -->
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-xs-6 mb4">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 75px;"/>
                        </div>
                        <div class="col-xs-9 text-left rtp-header-slogan" t-field="company.report_header" name="moto"/>
                    </div>
                </div>
            </xpath>

            <!-- Personnalisation du footer -->
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="text-left" style="margin-left:10px;">
                        <ul class="list-unstyled mb4">
                            <li t-if="company.street"><span t-field="company.street"/></li>
                            <li t-if="company.city and company.zip">BP: <span t-field="company.zip"/> <span t-field="company.city"/></li>
                            <li t-if="company.phone">Phone: <span t-field="company.phone"/></li>
                            <li t-if="company.email"><span t-field="company.email"/></li>
                            <li t-if="company.website">Web: <span t-field="company.website"/></li>
                            <li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
                            <li>
                                <div name="financial_infos">
                                    <span t-field="company.report_footer"/>
                                </div>
                            </li>
                        </ul>


                        <!--div class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div-->
                    </div>
                </div>
            </xpath>
        </template>
	</data>
</odoo>